<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:stretchColumns="1"
    tools:context="com.josephcmontgomery.gunter.ChannelSearchActivity">
    <TableRow
        android:id="@+id/toolrow"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="#a9a8a8">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Done"/>

           <android.widget.SearchView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="2"
                android:id="@+id/search_bar"
               android:queryHint="Search for channels"
                />
    </TableRow>
    <TableRow
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        >
        <ListView
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/drop_area"></ListView>
        <ListView
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/search_results"></ListView>
    </TableRow>
</TableLayout>
